@echo off
chcp 65001 > nul

if "%~1"=="/?" (
    echo Як використати: %~nx0 [каталог_1] [каталог_2] [...]
    echo Якщо немає параметрів – використовується поточний каталог.
    exit /b 0
)

if "%~1"=="" (
    set folders="%cd%"
) else (
    set folders=%*
)

for %%D in (%folders%) do (
    if exist "%%~D" (
        echo Каталог "%%~D" — видалення файлів...
        echo Успішно видалено всі файли з "%%~D".
    ) else (
        echo Каталог "%%~D" не існує. Пропускаємо...
    )
)
